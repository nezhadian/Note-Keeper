<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Note_Keeper">

    <SolidColorBrush x:Key="PrimaryColor" Color="#FFFF4600"/>
    
    <SolidColorBrush x:Key="PrimaryColor.Hover" Color="#FFFF6023"/>
    <SolidColorBrush x:Key="PrimaryColor.Pressed" Color="#FFE43E00"/>
    <SolidColorBrush x:Key="PrimaryColor.Contrast" Color="White"/>

    <SolidColorBrush x:Key="SecondaryColor" Color="#ddd"/>

    <SolidColorBrush x:Key="SecondaryColor.Hover" Color="#FFF1F1F1"/>
    <SolidColorBrush x:Key="SecondaryColor.Pressed" Color="#FFC9C9C9"/>
    <SolidColorBrush x:Key="SecondaryColor.Contrast" Color="Black"/>

    <Color x:Key="ShadowColor">Black</Color>


    <SolidColorBrush x:Key="BackgroundColor" Color="#fff"/>
    <SolidColorBrush x:Key="TitleBarBackgroundColor" Color="#fff"/>

    <SolidColorBrush x:Key="TitleTextColor" Color="#333"/>
    <SolidColorBrush x:Key="TextColor" Color="#444"/>
    <SolidColorBrush x:Key="SubTextColor" Color="#666"/>
    
    <SolidColorBrush x:Key="ListBoxHoverColor" Color="#FFF0F0F0"/>
    
    <SolidColorBrush x:Key="IconsColor" Color="#999"/>
    <SolidColorBrush x:Key="IconHoverColor" Color="#555"/>

    <SolidColorBrush x:Key="AlertColor" Color="#FFF10B4A"/>
    <SolidColorBrush x:Key="DeleteCancelButtonColor" Color="#09f"/>
    
    <!--others-->

</ResourceDictionary>