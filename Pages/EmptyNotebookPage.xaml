<Page x:Class="Note_Keeper.EmptyNotebookPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Note_Keeper"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="EmptyNotebookPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Note Keeper;component/Images/ezgif.com-gif-maker.png" Width="256"/>
            <TextBlock Text="Ops..." Style="{StaticResource BigTitle}" HorizontalAlignment="Center" Margin="0,20,0,0"/>
            <TextBlock Text="Your Note Book Is Empty Start Writng a new Note ." Style="{StaticResource NormalText}" Margin="0,20,0,0"/>
            <Button HorizontalAlignment="Center" Style="{StaticResource CTAButtonStyle}" Content="Write an Note"  Margin="0,20,0,0" Command="{x:Static ApplicationCommands.New}"/>
        </StackPanel>
    </Grid>
</Page>
