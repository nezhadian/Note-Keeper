<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Note_Keeper">
    
    <SolidColorBrush x:Key="PrimaryColor" Color="#09f"/>

    <SolidColorBrush x:Key="PrimaryColor.Hover" Color="#1af"/>
    <SolidColorBrush x:Key="PrimaryColor.Pressed" Color="#08e"/>
    <SolidColorBrush x:Key="PrimaryColor.Contrast" Color="White"/>

    <SolidColorBrush x:Key="SecondaryColor" Color="#444"/>

    <SolidColorBrush x:Key="SecondaryColor.Hover" Color="#555"/>
    <SolidColorBrush x:Key="SecondaryColor.Pressed" Color="#333"/>
    <SolidColorBrush x:Key="SecondaryColor.Contrast" Color="White"/>

    <Color x:Key="ShadowColor">#ddd</Color>


    <SolidColorBrush x:Key="BackgroundColor" Color="#222"/>
    <SolidColorBrush x:Key="TitleBarBackgroundColor" Color="#222"/>


    <SolidColorBrush x:Key="TitleTextColor" Color="#ddd"/>
    <SolidColorBrush x:Key="TextColor" Color="#999"/>
    <SolidColorBrush x:Key="SubTextColor" Color="#aaa"/>

    <SolidColorBrush x:Key="ListBoxHoverColor" Color="#333"/>

    <SolidColorBrush x:Key="IconsColor" Color="#999"/>
    <SolidColorBrush x:Key="IconHoverColor" Color="#ddd"/>

    <SolidColorBrush x:Key="AlertColor" Color="#FFF10B4A"/>
    <SolidColorBrush x:Key="DeleteCancelButtonColor" Color="#09f"/>

</ResourceDictionary>