<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Note_Keeper">

    <Style TargetType="TextBlock" x:Key="BaseText">
        <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="NormalText" BasedOn="{StaticResource BaseText}">
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="TitleText" BasedOn="{StaticResource BaseText}">
        <Setter Property="FontSize" Value="18"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="BigTitle" BasedOn="{StaticResource BaseText}">
        <Setter Property="FontSize" Value="24"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="DetailText" BasedOn="{StaticResource BaseText}">
        <Setter Property="FontSize" Value="12"/>
    </Style>

</ResourceDictionary>